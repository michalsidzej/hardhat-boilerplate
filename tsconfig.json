{
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "ES2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true, // to fix code navigation issues: https://github.com/microsoft/vscode/issues/73201
    "stripInternal": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "composite": true,
    "incremental": true
  }
}
